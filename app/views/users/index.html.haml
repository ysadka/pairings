.row
  .columns.large-5
    %h4 Wines
    %hr
    %ul
      -@wines.each do |wine|
        %li= link_to "#{wine.winery.name_as_a_title} #{wine.vintage} #{wine.grape.varietal_as_a_title}", wine_path(wine.id)

  .columns.large-5
    %h4 Cheeses
    %hr
    %ul
      -@cheeses.each do |cheese|
        %li= link_to "#{cheese.name} from #{cheese.region}", cheese_path(cheese.id)
